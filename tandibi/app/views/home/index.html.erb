<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>

<% if current_user %>
<p><%= current_user.email %></p>
<%= link_to "Sign out", destroy_user_session_path, :method => :delete, id: "btn-sign-out" %>
<%= link_to "Edit", edit_user_registration_path, id: "btn-edit"%>
<% end %>

<% if !current_user %>
<%= link_to "Sign Up", new_user_registration_path %>
<%= link_to "Login", new_user_session_path %>
<% end %>

<script>
window.addEventListener("load", function(){
  document.getElementById("btn-sign-out").onclick = function(e){
    if(!window.confirm("Are you sure to sign out?")){
      e.preventDefault()
    }
  };
});
</script>