<p style="color: green"><%= notice %></p>

<h1>V quotes</h1>

<div id="v_quotes">
  <% @v_quotes.each do |v_quote| %>
    <%= render v_quote %>
    <p>
      <%= link_to "Show this v quote", v_quote %>
    </p>
  <% end %>
</div>

<%= link_to "New v quote", new_v_quote_path %>

<% if Current.user %>
  Logged in as: <%= Current.user.email %><br>
  <%= link_to 'Edit Password', edit_password_path %>
  <%= button_to 'Logout', logout_path, method: :delete %>
<% else %>
  <%= link_to 'Sign Up', sign_up_path %> or <%= link_to 'Login', sign_in_path %>
<% end %>
